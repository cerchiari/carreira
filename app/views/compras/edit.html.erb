<div class="page-header">
  <h1>Editing Compra #<%= @compra.id %></h1>
</div>

<%= form_tag(compra_url(@compra), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @compra.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :item_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :item_id, @compra.item_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :status, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :status, @compra.status, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :data, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :data, @compra.data, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :quantidade, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :quantidade, @compra.quantidade, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Compra", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
