<div class="page-header">
  <h1>Compras</h1>
</div>

<p><%= link_to 'Add a New Compra', new_compra_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Item</th>
      <th>Status</th>
      <th>Data</th>
      <th>Quantidade</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= compra.user_id %></td>
        <td><%= compra.item_id %></td>
        <td><%= compra.status %></td>
        <td><%= compra.data %></td>
        <td><%= compra.quantidade %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, compra_url(compra), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_compra_url(compra), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, compra_url(compra), method: 'delete', data: { confirm: "Do you really want to delete this compra?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

