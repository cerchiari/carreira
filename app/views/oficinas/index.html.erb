<div class="page-header">
  <h1>Oficinas</h1>
</div>

<p><%= link_to 'Add a New Oficina', new_oficina_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Item</th>
      <th>Resumo</th>
      <th>Publicoalvo</th>
      <th>Descricao</th>
      <th>Aprendizagem</th>
      <th>Duracao</th>
      <th>Preco</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @oficinas.each do |oficina| %>
      <tr>
        <td><%= oficina.categoria %></td>
        <td><%= oficina.item %></td>
        <td><%= oficina.resumo %></td>
        <td><%= oficina.publicoalvo %></td>
        <td><%= oficina.descricao %></td>
        <td><%= oficina.aprendizagem %></td>
        <td><%= oficina.duracao %></td>
        <td><%= oficina.preco %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, oficina_url(oficina), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_oficina_url(oficina), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, oficina_url(oficina), method: 'delete', data: { confirm: "Do you really want to delete this oficina?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

