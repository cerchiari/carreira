<div class="page-header">
  <h1>Times</h1>
</div>

<p><%= link_to 'Add a New Time', new_time_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Resume</th>
      <th>Funcao</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @times.each do |time| %>
      <tr>
        <td><%= time.nome %></td>
        <td><%= time.resume %></td>
        <td><%= time.funcao %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, time_url(time), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_time_url(time), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, time_url(time), method: 'delete', data: { confirm: "Do you really want to delete this time?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

