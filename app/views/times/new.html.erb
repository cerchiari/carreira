<div class="page-header">
  <h1>New Time</h1>
</div>

<%= form_tag(times_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :nome, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :nome, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :resume, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :resume, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :funcao, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :funcao, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Time", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
